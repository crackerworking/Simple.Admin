@page "/login"
@model Mi.RazorLibrary.Pages.Account.LoginModel

@{
    Layout = null;
    ViewBag.Guid = Guid.NewGuid();
}

<!DOCTYPE html>
<html>
<head>

    <meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta name="apple-touch-fullscreen" content="yes" />
    <meta name="format-detection" content="email=no" />
    <meta name="wap-font-scale" content="no" />
    <meta name="viewport" content="user-scalable=no, width=device-width" />
    <meta content="telephone=no" name="format-detection" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>登录</title>
    <link href="~/component/layui/css/layui.css" rel="stylesheet" />
    <link href="~/component/login/css/ax.css" rel="stylesheet" type="text/css">
    <link href="~/component/login/css/ax-response.css" rel="stylesheet" type="text/css">
    <link href="~/component/login/css/main.css" rel="stylesheet" type="text/css">
    <style>
        .mi-active {
            color: #198cff;
        }

        #captchaImg:hover {
            cursor: pointer;
        }
    </style>
</head>
<body class="ax-align-origin">
    <div class="login ax-shadow-cloud ax-radius-md">
        <div class="ax-row ax-radius-md ax-split">
            <div class="ax-col ax-col-14 ax-radius-left ax-radius-md cover"></div>
            <div class="ax-col ax-col-10">
                <div class="core">
                    <div class="ax-break"></div>
                    <div class="ax-tab" axTab>
                        <ul class="ax-row ax-tab-nav ax-menu-tab">
                            <li><a href="###" class="ax-item toggle-item mi-active">登录账号</a></li>
                            <li><a href="###" class="ax-item toggle-item">注册新用户</a></li>
                            <li class="ax-col"></li>
                        </ul>
                        <ul class="ax-tab-content">
                            <li>
                                <div class="layui-form">

                                    <input name="guid" type="hidden" value="@ViewBag.Guid" />

                                    <div class="ax-break"></div>
                                    <div class="ax-break ax-hide-tel"></div>
                                    <div class="ax-form-group">
                                        <div class="ax-flex-row">
                                            <div class="ax-form-con">
                                                <div class="ax-form-input"><span class="ax-pos-left" style="width: 2.4rem;"><i class="ax-iconfont ax-icon-me-f"></i></span><input name="userName" lay-verify="required" placeholder="输入登录名称" type="text"><span class="ax-pos-right"><a href="###" class="ax-iconfont ax-icon-close ax-val-none"></a></span></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="ax-break-md"></div>
                                    <div class="ax-form-group">
                                        <div class="ax-flex-row">
                                            <div class="ax-form-con">
                                                <div class="ax-form-input">
                                                    <span class="ax-pos-left" style="width:2.4rem;"><i class="ax-iconfont ax-icon-lock-f"></i></span>
                                                    <input name="password" lay-verify="required" placeholder="输入密码" type="password"><span class="ax-pos-right"><a href="###" class="ax-iconfont ax-icon-close ax-val-none"></a></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="ax-break-md"></div>

                                    <div class="ax-form-group">
                                        <div class="ax-flex-row">
                                            <div class="ax-form-con">
                                                <div class="ax-form-input">
                                                    <div class="ax-row">
                                                        <div class="ax-flex-block">
                                                            <span class="ax-pos-left" style="width:2.4rem;"><i class="ax-iconfont ax-icon-shield-f"></i></span>
                                                            <input name="code" lay-verify="required" placeholder="输入验证码..." value="" type="text"><span class="ax-pos-right"><a href="###" class="ax-iconfont ax-icon-close ax-val-none"></a></span>
                                                        </div>
                                                        <a class="ax-form-img"><img asp-append-version="true" id="captchaImg" src="/api/public/LoginCaptcha?guid=@ViewBag.Guid"></a>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>


                                    <div class="ax-break-md"></div>

                                    <div class="ax-break-md"></div>

                                    <div class="ax-form-group">
                                        <div class="ax-flex-row">
                                            <div class="ax-flex-block">
                                                <div class="ax-form-input"><button type="button" lay-submit lay-filter="login" class="ax-btn ax-primary ax-full">登录</button></div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="ax-break"></div>
                                    <div class="ax-break ax-hide-tel"></div>
                                    <div class="ax-break ax-hide-tel"></div>

                                </div>
                            </li>
                            <li>
                                <div class="layui-form">

                                    <div class="ax-break"></div>
                                    <div class="ax-break ax-hide-tel"></div>

                                    <div class="ax-form-group">
                                        <div class="ax-flex-row">
                                            <div class="ax-form-con">
                                                <div class="ax-form-input"><span class="ax-pos-left" style="width: 2.4rem;"><i class="ax-iconfont ax-icon-me-f"></i></span><input lay-verify="required" name="re_userName" placeholder="输入名称" type="text"><span class="ax-pos-right"><a href="###" class="ax-iconfont ax-icon-close ax-val-none"></a></span></div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="ax-break-md"></div>

                                    <div class="ax-form-group">
                                        <div class="ax-flex-row">
                                            <div class="ax-form-con">
                                                <div class="ax-form-input">
                                                    <span class="ax-pos-left" style="width:2.4rem;"><i class="ax-iconfont ax-icon-lock-f"></i></span>
                                                    <input name="re_password" lay-verify="required" placeholder="输入密码" type="password"><span class="ax-pos-right"><a href="###" class="ax-iconfont ax-icon-close ax-val-none"></a></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="ax-break-md"></div>

                                    <div class="ax-form-group">
                                        <div class="ax-flex-row">
                                            <div class="ax-form-con">
                                                <div class="ax-form-input">
                                                    <span class="ax-pos-left" style="width:2.4rem;"><i class="ax-iconfont ax-icon-lock-f"></i></span>
                                                    <input lay-verify="required" name="re_sure_password" placeholder="再次输入密码" type="password"><span class="ax-pos-right"><a href="###" class="ax-iconfont ax-icon-close ax-val-none"></a></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="ax-break-md"></div>

                                    <div class="ax-break-md"></div>

                                    <div class="ax-form-group">
                                        <div class="ax-flex-row">
                                            <div class="ax-flex-block">
                                                <div class="ax-form-input"><button type="button" lay-submit lay-filter="register" class="ax-btn ax-primary ax-full">注册</button></div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="ax-break"></div>
                                    <div class="ax-break ax-hide-tel"></div>
                                    <div class="ax-break ax-hide-tel"></div>

                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--正文结束-->

    <div class="footer" style="color:black">
        @Model.FooterWord
    </div>

    <script src="~/component/login/js/ax.min.js" type="text/javascript"></script>
    <script src="~/component/layui/layui.js"></script>
    <script src="~/admin/js/mi-utils.js"></script>
    <script>
        layui.use(['form', 'jquery'], function () {
            let $ = layui.$;
            let form = layui.form;

            $('.toggle-item').click(function () {
                $('.toggle-item').removeClass('mi-active')
                $(this).addClass('mi-active');
            })

            $('#captchaImg').click(function () {
                this.src = '/api/public/LoginCaptcha?v=' + uuid() + '&guid=@ViewBag.Guid'
            })

            form.on('submit(login)', function (loginData) {
                $.ajax({
                    type: 'post',
                    url: '/api/login/Do',
                    data: loginData.field,
                    beforeSend: function (request) {
                        //layer.msg('登录中...', {
                        //    icon: 16,
                        //    shade: 0.01
                        //});
                        // request.setRequestHeader("Mi-Header", base64Encryption(MiUtils.header()))
                    },
                    success: function (res) {
                        //layer.closeAll();
                        if (MiUtils.ajaxSucceed(res.code)) {
                            window.location.href = '/'
                        } else {
                            layer.msg(res.message, {
                                icon: 2,
                                time: 800
                            }, function () {
                                $('#captchaImg').attr('src', '/api/public/LoginCaptcha?v=' + uuid() + '&guid=@ViewBag.Guid')
                            });
                        }
                    }
                })
            })

            form.on('submit(register)', function (data) {
                if (data.field.re_sure_password != data.field.re_password) {
                    layer.msg('两次密码不一致', {
                        icon: 2,
                        time: 1000
                    });
                    return;
                }
                let param = {
                    userName: data.field.re_userName,
                    password: data.field.re_password,
                }
                $.post('/api/Login/New', param, function (res) {
                    if (res.code === 90001) {
                        layer.msg(res.message, {
                            icon: 1,
                            time: 1000
                        }, function () {
                            window.location.reload();
                        });
                    } else {
                        layer.msg(res.message, {
                            icon: 2,
                            time: 1000
                        });
                    }
                })
            })
        })
    </script>
</body>

</html>
